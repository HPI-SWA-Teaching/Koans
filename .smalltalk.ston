SmalltalkCISpec {
	#loading : [
		SCIMetacelloLoadSpec {
			#baseline : 'Koans',
			#directory : 'src',
			#platforms : [ #squeak ],
			#useLatesMetacello : true,
			#load : [ 'completeWithTests' ]
		}
	],
	#testing : {
		#package : [ 'Koans-Tests.*' ],
		#exclude : {
			#categories : [ 'Koans-Tests-Mocks' ]
		},
		#failOnZeroTests : false,
		#hidePassingTests : true,
		#defaultTimeout : 30,
		#coverage: {
			#categories : [ 'Koans-Core' ]
		}
	}
}
